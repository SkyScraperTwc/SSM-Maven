<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.scut.mybatis.dao.EmployeeMapper">

	<select id="getEmployeeById" resultType="Employee">
		select * from tbl_employee where id = #{id}
	</select>

	<!--多个参数会封装成一个map, #{}就是从map中获取指定的key的值-->
	<select id="getEmployeeByIdAndName" resultType="Employee">
		select * from tbl_employee where id=#{id} and name=#{mame}
	</select>

	<select id="getEmployeeList" resultType="Employee">
		select * from tbl_employee
	</select>

	<!--resultMap自定义结果集映射规则-->
	<resultMap type="Employee" id="MyEmployee">
		<id property="id" column="id"/>
		<result property="name" column="name"/>
		<result property="email" column="email"/>
		<result property="gender" column="gender"/>
	</resultMap>

	<select id="getEmployeeByResultMap" resultMap="MyEmployee">
		select * from tbl_employee where id=#{id}
	</select>

	<!--useGeneratedKeys使用自增主键策略，获取主键-->
	<insert id="addEmployee" useGeneratedKeys="true" keyProperty="id">
		insert into tbl_employee(name, gender, email) values(#{name}, #{gender}, #{email})
	</insert>

	<update id="updateEmployee">
		update tbl_employee
			set name=#{name}, gender=#{gender}, email=#{email}
			where id=#{id}
	</update>

	<delete id="deleteEmployee">
		delete from tbl_employee where id=#{id}
	</delete>

</mapper>